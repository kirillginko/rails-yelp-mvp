<h1 class="text-center">Post Review for <%= @restaurant.name %> </h1>
<div class = "container">
  <div class="row">
    <div class="col-cs-12 col-sm-6 col-sm-offset-3">

  <%= simple_form_for [@restaurant, @review] do |f| %>
    <div class="form-inputs">
      <%= f.input :content, placeholder: "Great place!" %>
      <p>Rating</p>
      <%= f.select :rating, (0..5) %>
    </div>
    <br>
    <div class="form-actions">
      <%= f.button :submit, class: 'btn btn-primary' %>
    </div>
  <% end %>
</div>
